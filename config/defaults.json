{
  "app": {
    "name": "Weather & Currency CLI",
    "version": "1.0.0"
  },

  "api": {
    "geocode_url": "http://api.openweathermap.org/geo/1.0/direct",
    "weather_url": "https://api.openweathermap.org/data/2.5/weather",
    "currency_url": "https://v6.exchangerate-api.com/v6",
    "timeout": 5,
    "retries": 2
  },

  "features": {
    "enable_weather": true,
    "enable_currency": true
  },

  "location": {
    "default_city": "Dodoma"
  },

  "logging": {
    "level": "INFO",
    "file": "logs/app.log",
    "max_size_mb": 1,
    "backup_count": 3,
    "format": "%(asctime)s - %(levelname)s - %(message)s"
  }
}